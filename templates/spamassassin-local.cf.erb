# These values can be overridden by editing ~/.spamassassin/user_prefs.cf 
# (see spamassassin(1) for details)

required_hits <%= @sa_required_hits %>
report_safe <%= @sa_report_safe %>

use_bayes <%= @sa_use_bayes %>
bayes_auto_learn <%= @sa_bayes_auto_learn %>
bayes_auto_learn_threshold_spam <%= @sa_bayes_threshold_spam %>
bayes_auto_learn_threshold_nonspam <%= @sa_bayes_threshold_nonspam %>

# This should begin off
use_auto_whitelist <%= @sa_use_auto_whitelist %>

<% @sa_rewrite_header.each do |rule| -%>
rewrite_header <%= rule %>
<% end -%>
trusted_networks <%= @sa_trusted_networks %>
skip_rbl_checks <%= @sa_skip_rbl_checks %>
<% @sa_loadplugin.each do |plugin| -%>
loadplugin <%= plugin %>
<% end -%>
<% @sa_score.each do |rule| -%>
score <%= rule %>
<% end -%>

# Don't care about emails not in english
ok_locales en
